<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIExample1.SettingsPage"
             Title="Settings">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to settings page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="LoadLoginButton"
                Text="Switch to Login Tabbar"
                SemanticProperties.Hint="Allows switching between tab bars"
                Clicked="LoadLoginButton_Clicked"
                HorizontalOptions="FillAndExpand"
                Padding="0,20,0,20"
                Margin="10,10,10,10" />
    </VerticalStackLayout>
</ContentPage>